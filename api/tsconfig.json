{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "outDir": "dist",
    "rootDir": ".",
    "incremental": true,
    "checkJs": false,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*.ts"]
}